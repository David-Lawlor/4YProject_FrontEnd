<!DOCTYPE html>
<html lang="en">
<head>
    <meta name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no' />
    <title></title>
    <link href="/public/css/bootstrap.css" rel="stylesheet">
    <link href="/public/css/font-awesome.css" rel="stylesheet">
    <link href="/public/css/style.css" rel="stylesheet">
    <link href="/public/css/keen-dashboards.css" rel="stylesheet">
</head>

<body ng-app="dashboard">
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container-fluid" ng-controller="ClockController">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/"><span class="navbar-brand-text">Manage My Home</span> </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a class="nav-time">
                            <span>{[{days[date.getDay()]}]} {[{months[date.getMonth()]}]} {[{date.getDate() | addSuffix}]} Time {[{date.getHours() | pad}]}:{[{date.getMinutes() | pad}]}:{[{date.getSeconds() | pad}]}</span>
                        </a>
                    </li>
                    {{#if user}}
                        <li>
                            <a>
                                <span>{{firstName}} {{lastName}}</span>
                            </a>
                        </li>
                        <li><a href="/">Dashboard</a></li>
                        <li><a href="/users/logout">Logout</a></li>
                    {{else}}
                        <li><a href="/users/register">Register</a></li>
                        <li><a href="/users/login">Login</a></li>
                    {{/if}}</ul>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            {{#if success_msg}}
                <div class="alert alert-success">{{success_msg}}</div>
            {{/if}}

            {{#if error_msg}}
                <div class="alert alert-danger">{{error_msg}}</div>
            {{/if}}

            {{#if error}}
                <div class="alert alert-danger">{{error}}</div>
            {{/if}}

            <div ng-controller="mainController">
                {{{body}}}

            </div>


        </div>
    </div>

    <hr/>
    <div class="container-fluid">
        <p>&copy; David Lawlor 2017</p>
    </div>
    <script src="/node_modules/angular/angular.js"></script>
    <script src="/public/js/jquery-3.1.1.js"></script>
    <script src="/public/js/angularApp.js"></script>
    <script src="/public/js/services/changeAngularBinding.js"></script>
    <script src="/public/js/bootstrap.js"></script>
    <script src="/node_modules/chart.js/dist/Chart.min.js"></script>
    <script src="/node_modules/angular-chart.js/dist/angular-chart.min.js"></script>

    <script src="/public/js/controller/Room1Temp.js"></script>
    <script src="/public/js/controller/Room1Light.js"></script>
    <script src="/public/js/controller/Room2Temp.js"></script>
    <script src="/public/js/controller/Room2Humidity.js"></script>
    <script src="/public/js/controller/Clock.js"></script>
    <script src="/public/js/controller/weatherCtrl.js"></script>

</body>
</html>
