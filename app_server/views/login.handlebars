<div class="form-surround">
    <h3 class="page-header">Account Login</h3>
    <form class="form-signin" method="post" action="/users/login">
        <div class="form-group">
            <label for="username" class="cols-sm-2 control-label">Email</label>
            <div class="cols-sm-12">
                <div class="input-group">
                    <input type="text" class="form-control" name="username" id="username"  placeholder="Enter your Email"/>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="password" class="cols-sm-2 control-label">Password</label>
            <div class="cols-sm-12">
                <div class="input-group">
                    <input type="password" class="form-control" name="password" id="password"  placeholder="Enter your Password"/>
                </div>
            </div>
        </div>

        <button class="btn btn-md btn-primary btn-block" type="submit">
            Submit
        </button>
    </form>
    <div class="form-signin">
        <h4>Log in with:</h4>
        <a href='/auth/google' class="btn btn-block btn-social btn-google-plus">
            <i class="fa fa-google-plus"></i> Sign in with Google
        </a>
    </div>
</div>

